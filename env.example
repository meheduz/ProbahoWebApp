# Probaho Environment Variables
# Copy this file to .env.local and fill in your actual values

# App Configuration
NEXT_PUBLIC_APP_NAME=Probaho
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/probaho

# Authentication & Security
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here
OTP_SECRET=your-otp-secret-here

# MFS API Keys
BKASH_API_KEY=your-bkash-api-key
BKASH_API_SECRET=your-bkash-api-secret
BKASH_MERCHANT_ID=your-bkash-merchant-id

ROCKET_API_KEY=your-rocket-api-key
ROCKET_API_SECRET=your-rocket-api-secret
ROCKET_MERCHANT_ID=your-rocket-merchant-id

NAGAD_API_KEY=your-nagad-api-key
NAGAD_API_SECRET=your-nagad-api-secret
NAGAD_MERCHANT_ID=your-nagad-merchant-id

# Bank Custody Integration
CUSTODY_BANK_API_URL=https://api.custodybank.com
CUSTODY_BANK_API_KEY=your-custody-bank-api-key
CUSTODY_BANK_API_SECRET=your-custody-bank-api-secret

# Payment Gateway
PAYMENT_GATEWAY_URL=https://api.paymentgateway.com
PAYMENT_GATEWAY_KEY=your-payment-gateway-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret

# SMS Service
SMS_API_URL=https://api.smsservice.com
SMS_API_KEY=your-sms-api-key

# Email Service
EMAIL_API_URL=https://api.emailservice.com
EMAIL_API_KEY=your-email-api-key

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
